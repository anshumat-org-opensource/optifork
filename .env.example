# Environment Configuration for OptiFork
# Copy this file to .env and customize the values

# Database Configuration
# SQLite (default - no setup required)
DATABASE_URL=sqlite:///./data/optifork.db

# PostgreSQL (uncomment to use instead of SQLite)
# DATABASE_URL=postgresql://optifork:optifork_secret@postgres:5432/optifork
# POSTGRES_DB=optifork
# POSTGRES_USER=optifork  
# POSTGRES_PASSWORD=optifork_secret

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:80

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# Application Settings
DEBUG=false
LOG_LEVEL=info

# Security (generate strong secrets in production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Feature Flags (for OptiFork itself)
ENABLE_METRICS=true
ENABLE_AUDIT_LOG=true
DEFAULT_CACHE_TTL=300